<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xmx3g -classpath %classpath edu.mit.ll.vizlincdb.VizLincRDBBenchmark</exec.args>
                <exec.executable>java</exec.executable>
                <exec.classpathScope>runtime</exec.classpathScope>
                <exec.workingdir>/data/speech/dhalbert</exec.workingdir>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Xmx3g -classpath %classpath edu.mit.ll.vizlincdb.VizLincRDBBenchmark</exec.args>
                <exec.executable>java</exec.executable>
                <exec.classpathScope>runtime</exec.classpathScope>
                <jpda.listen>true</jpda.listen>
                <exec.workingdir>/data/speech/dhalbert</exec.workingdir>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2:exec</goal>
            </goals>
            <properties>
                <exec.args>${profiler.args} -Xmx3g -classpath %classpath edu.mit.ll.vizlincdb.VizLincRDBBenchmark</exec.args>
                <exec.executable>${profiler.java}</exec.executable>
                <exec.workingdir>/data/speech/dhalbert</exec.workingdir>
            </properties>
        </action>
        <action>
            <actionName>javadoc</actionName>
            <goals>
                <goal>generate-sources</goal>
                <goal>javadoc:javadoc</goal>
            </goals>
            <properties>
                <linksource>true</linksource>
            </properties>
        </action>
    </actions>
